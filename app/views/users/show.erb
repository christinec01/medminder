<h1>Welcome back, <%= @user.name %> </h1>
<br>
<h2>Current Medminders:</h2>
<% if logged_in? %>
  <a class="waves-effect waves-light btn" href="/medminders/new">Add a new Medminder</a>
<%end%>
 <%@medminders.each do |medminder|%>

  <div class="row">
  <div class="col s12 m3">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"> <%=medminder.name %></span>
        <p> <%=medminder.time %>  </p>
      </div>
      <div class="card-action">
        <a class="waves-effect waves-light btn send-text">Medminder!</a>
        <form id="delete-medminder" action="/users/<%=@user.id%>/medminders/<%="#{medminder.id}"%>" method="POST">
          <input type="hidden" name="_method" value="delete">
          <button class="delete_button" type="submit">Delete</button>
          <!-- <a href="#" class="waves-effect waves-light btn delete_button" onclick="document.getElementById('delete-medminder').submit()">Delete</a> -->
        </form>
    </div>
  </div>
</div>

  <%end%>
